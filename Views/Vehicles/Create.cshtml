@model Cartrade.Models.ViewModels.ManualVehicleViewModel
@{
    ViewData["Title"] = "Ny registrering";
}

<div class="page-head">
    <div>
        <h1>Manuell registrering</h1>
        <p>LÃ¤gg in ett fordon direkt i CarTrade.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-brand">Tillbaka</a>
</div>

<form asp-action="Create" method="post" class="form-shell">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="ExternalReference" class="form-label"></label>
            <input asp-for="ExternalReference" class="form-control" />
            <span asp-validation-for="ExternalReference" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="RegistrationNumber" class="form-label"></label>
            <input asp-for="RegistrationNumber" class="form-control" />
            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Vin" class="form-label"></label>
            <input asp-for="Vin" class="form-control" />
            <span asp-validation-for="Vin" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PartnerName" class="form-label"></label>
            <input asp-for="PartnerName" class="form-control" />
            <span asp-validation-for="PartnerName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Make" class="form-label"></label>
            <input asp-for="Make" class="form-control" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="ModelYear" class="form-label"></label>
            <input asp-for="ModelYear" class="form-control" />
            <span asp-validation-for="ModelYear" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="OdometerKm" class="form-label"></label>
            <input asp-for="OdometerKm" class="form-control" />
            <span asp-validation-for="OdometerKm" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="FuelType" class="form-label"></label>
            <input asp-for="FuelType" class="form-control" />
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Color" class="form-label"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-brand">Spara fordon</button>
        <a asp-action="Index" class="btn btn-light">Avbryt</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

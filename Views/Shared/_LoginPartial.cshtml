@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav align-items-lg-center gap-lg-2">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Hantera konto">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-sm btn-outline-dark">Logga ut</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-sm btn-brand" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
    </li>
}
</ul>
